<%= nav_bar :fixed => :top do %>
  <%= menu_group do %>
    <% if current_user %>
      <% team = current_user.team %>
      <%= menu_item team.full_name, team_path(team) %>
      <%= menu_item "My Profile", root_path %>
    <% end %>
    <%= menu_item "About", about_path %>
    <%= menu_item "Contact", contact_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
      <% if current_user %>
        <%= menu_item 'Edit My Account', edit_user_path(current_user) %>
        <%= menu_item "Log Out", logout_path %>
      <% else %>
        <%= menu_item "Sign In", signin_path %>
        <%= menu_item "Sign Up", new_user_path %>
    <% end %>
  <% end %>
<% end %>
